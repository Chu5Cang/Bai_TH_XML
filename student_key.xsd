<?xml version="1.0" encoding="UTF-8"?>

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="school">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="student" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="id" type="xs:string"></xs:element>
                            <xs:element name="name" type="xs:string"></xs:element>
                            <xs:element name="date" type="xs:date"></xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                
                <xs:element name="enrollment" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="studentRef" type="xs:string"></xs:element>
                            <xs:element name="course" type="xs:string"></xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
        
        <xs:key name="StudentKey">
            <xs:selector xpath="student"></xs:selector>
            <xs:field xpath="id"></xs:field>
        </xs:key>
        
        <xs:keyref name="EnrollmentStudentRef" refer="StudentKey">
            <xs:selector xpath="enrollment"></xs:selector>
            <xs:field xpath="studentRef"></xs:field>
        </xs:keyref>
        
    </xs:element>
</xs:schema>
